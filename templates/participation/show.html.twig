{% extends 'baseBack.html.twig' %}

{% block title %}<title>Participation</title>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Participation</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participation.id }}</td>
            </tr>
            <tr>
                <th>Name_participant</th>
                <td>{{ participation.nomParticipant }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ participation.role }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ participation.statut }}</td>
            </tr>
            <tr>
                <th>Feedback</th>
                <td>{{ participation.feedback }}</td>
            </tr>
            <tr>
                <th>Name Event</th>
                <td>{{ participation.event }}</td>
            </tr>
        </tbody>
    </table>

    <div align="center">
            <a href="{{ path('app_participation_edit', {'id': participation.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin:3px;">Edit</a>
            <div style="margin-right:47px;margin-top:3px;">
                {{ include('participation/_delete_form.html.twig') }}
            </div>
        </div>
        <button class="btn btn-sm" style="background-color: white; margin-right:auto;"> 
                <a href="{{ path('app_participation_index') }}"><img  src="{{ asset('BackOffice/img/retour.png') }}" style="width: 30px; height: 30px;"></a>
        </button>
{% endblock %}
