{% extends 'baseBack.html.twig' %}
{% block title %}Calendrier{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Calendrier </h1>
        <div class="text-end mb-3">
           
        </div>
        <table class="table table-borderless table-data3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Proprietaire</th>
                    <th scope="col">Liste</th>
                    <th scope="col">Notification</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for calendrier in calendriers %}
                    <tr>
                        <td>{{ calendrier.id }}</td>
                        <td>{{ calendrier.proprietaire }}</td>
                        <td>{{ calendrier.liste }}</td>
                        <td>{{ calendrier.notification }}</td>
                        <td>
                            <a href="{{ path('app_calendrier_show', {'id': calendrier.id}) }}" class="btn btn-outline-secondary btn-sm">Show</a>
                            <a href="{{ path('app_calendrier_edit', {'id': calendrier.id}) }}" class="btn btn-outline-danger btn-sm">Edit</a>
                            <form action="{{ path('app_calendrier_delete', {'id': calendrier.id}) }}" method="post" style="display: inline-block;">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ calendrier.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_calendrier_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
{% endblock %}
