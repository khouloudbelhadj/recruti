{% extends 'baseBack.html.twig' %}

{% block title %}
    <title>Modifier le calendrier</title>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier le calendrier</h1>

    <form action="{{ path('app_calendrier_edit', {'id': calendrier.id}) }}" method="post">
        {{ form_start(form) }}

        <div class="form-group row">
            <label for="proprietaire" class="col-sm-2 col-form-label">Propri√©taire</label>
            <div class="col-sm-10">
                {{ form_widget(form.proprietaire, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group row">
            <label for="liste" class="col-sm-2 col-form-label">Liste</label>
            <div class="col-sm-10">
                {{ form_widget(form.liste, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group row">
            <label for="notification" class="col-sm-2 col-form-label">Notification</label>
            <div class="col-sm-10">
                {{ form_widget(form.notification, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            </div>
        </div>
        
        {{ form_end(form) }}
    </form>

    
</div>
{% endblock %}
