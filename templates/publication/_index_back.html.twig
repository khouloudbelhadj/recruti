 {% extends 'baseBack.html.twig' %}  

{% block title %}Post list{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Post list</h1>



        <table class="table table-borderless table-data3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">ID profile</th>
                    <th scope="col">User</th>
                    <th scope="col">Content</th>
                    <th scope="col">Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for publication in publications %}
                    <tr>
                         <td>{{ publication.id }}</td>
                        <td>{{ publication.userid.id }}</td>
                        <td>{{ publication.userid.Username }}</td>
                        <td>{{ publication.contenu }}</td>
                        <td>{{ publication.DateCreationpub ? publication.DateCreationpub|date('Y-m-d H:i:s') : ''  }}</td>
                        <td>
                           <a href="{{ path('app_publication_show', {'id': publication.id}) }}" class="btn btn-outline-secondary btn-sm">Show</a> 
                          {{ include('publication/_delete_back_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}