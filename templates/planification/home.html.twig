<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('userinput');
        const chatlog = document.getElementById('chatlog');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            const input = document.getElementById('input').value;
            const response = generateResponse(input);
            displayResponse(response);
            document.getElementById('input').value = '';
        });

      function generateResponse(input) {
    let response = '';
    if (input.toLowerCase() === 'cancel appointment') {
        response = "<span style='color: black;'>To cancel an appointment, please contact our customer service.</span>";
    } else if (input.toLowerCase() === 'reschedule appointment') {
        response = "<span style='color: white; background-color: black;'>To reschedule an appointment, please contact our customer service.</span>";
    } else if (input.toLowerCase() === 'make an appointment' || input.toLowerCase() === 'make an appointment') {
        response = "<span style='color: red;'>To make an appointment, please tap to the add appointment button.</span>";
    } else {
        response = "<span style='color: black;'>Sorry I do not understand. Can you rephrase your question ?</span>";
    }
    return response;
}



        function displayResponse(response) {
            const message = document.createElement('p');
            message.innerHTML = response;
            chatlog.appendChild(message);
        }
    });
</script>

