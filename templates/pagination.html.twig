{% if pageCount > 1 %}
    <nav>
        <ul class="pagination justify-content-center">

            {% if previous is defined %}
                <li class="page-item">
                    <span class="page-link-square"> <!-- Changed class name to reflect square styling -->
                        <a class="page-link" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;</a>
                    </span>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link-square disabled">&laquo;</span>
                </li>
            {% endif %}

            {% if startPage > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
                </li>
                {% if startPage == 3 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                    </li>
                {% elseif startPage != 2 %}
                    <li class="page-item disabled">
                        <span class="page-link">&hellip;</span>
                    </li>
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active">
                        <span class="page-link">{{ page }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <li class="page-item disabled">
                            <span class="page-link">&hellip;</span>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
                </li>
            {% endif %}

            {% if next is defined %}
                <li class="page-item">
                    <span class="page-link-square"> <!-- Changed class name to reflect square styling -->
                        <a class="page-link" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&raquo;</a>
                    </span>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link-square disabled">&raquo;</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}

<style>
    .page-link-square { /* Changed class name */
        display: inline-block;
        border-radius: 3px; /* Adjust border-radius for square appearance */
        border: 1px solid #ced4da;
        width: 30px;
        height: 30px;
        line-height: 30px;
        text-align: center;
    }
    .page-link-square.disabled {
        cursor: not-allowed;
    }
       
    .pagination {
        display: flex;
        justify-content: center;
    }
    .pagination .page-item {
        display: inline-block;
        margin: 0 5px;
    }
    .pagination .page-link {
        width: 30px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        padding: 0;
    }
</style>