{% extends 'baseBack.html.twig' %}

{% block title %}<title>Show Library</title>{% endblock %}

{% block body %}
    <div class="container mt-4"><br>
        <div class="card-header" align="center"><vr><br>
        <h1 class="mb-4"style="color: #a90909;"><strong>Show Library</strong></h1>
        </div>

        <a href="{{ path('app_biblio_ressources_back', {'id': biblio.id}) }}" class="btn float-end" style="margin-block-end: 20px; background-color: #a90909; color: white;">Find Resources</a>

        {% set img = biblio.imageB %}

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ biblio.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ biblio.nomB }}</td>
                </tr>
                <tr>
                    <th>Field</th>
                    <td>{{ biblio.domaineB }}</td>
                </tr>
                <tr>
                    <th>Creation Date</th>
                    <td>{{ biblio.dateCreationB ? biblio.dateCreationB|date('Y-m-d') : '' }}</td>
                </tr>

            <tr>
                <th>Image</th>
                <td><img style="width:150px;height:150px;" src="{{ asset(img) }}"></td>
            </tr>

            </tbody>
        </table>
        <div align="center">
            <a href="{{ path('app_biblio_edit', {'id': biblio.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin:3px;">Edit Library</a>
            <div style="margin-right:47px;margin-top:3px;">
                {{ include('biblio/_delete_form.html.twig') }}
            </div>
            
        </div>
        <button class="btn btn-sm" style="background-color: white; margin-right:auto;"> 
            <a href="{{ path('app_biblio_index') }}"><img  src="{{ asset('BackOffice/img/svg/arriere.png') }}" style="width: 40px; height: 40px;"></a>
        </button>   
{% endblock %}
