{% extends 'basefront.html.twig' %}
{% block title %}<title>List of Libraries</title>{% endblock %}

{% block body %}
        <div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Libraries</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="{{ path('app_front') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Libraries</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Libraries List</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Library Listing</h1>
                <a href="{{ path('app_biblio_new_front') }}" class="btn btn-outline-danger float-end" style="margin-block-end: 20px; background-color:#a90909; color:white;;">Add new Library</a>
                <table class="table table-borderless table-striped">
                    <thead class="thead-dark">
                        <tr>
                           <th scope="col">Name</th>
                           <th scope="col">Field</th>
                           <th scope="col">Creation Date</th>
                           <th scope="col">Actions</th>
                            </tr>
                    </thead>
                    <tbody>
                {% for biblio in biblios %}
                    <tr>
                        <td>{{ biblio.nomB }}</td>
                        <td>{{ biblio.domaineB }}</td>
                        <td>{{ biblio.dateCreationB ? biblio.dateCreationB|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('app_biblio_show_front', {'id': biblio.id}) }}" class="btn btn-outline-danger btn-sm">Show</a>
                                <a href="{{ path('app_biblio_edit_front', {'id': biblio.id}) }}" class="btn btn-outline-danger btn-sm">Edit</a>
                                <a href="{{ path('app_ressource_new_front', {'id': biblio.id}) }}" class="btn btn-outline-danger btn-sm">Add Resources</a>                                
                            </td>
                     </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">No records found</td>
                        </tr>
                    {% endfor %}
                     </tbody>
                </table>
                
                
            </div>        
        </div>                
{% endblock %}