{% extends 'basefront.html.twig' %}

{% block title %}<title> Resources of {{ biblio.nomB }}</title>{% endblock %}

{% block body %}

<!-- Header End -->
<div class="container-xxl py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Resources of {{ biblio.nomB }}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a href="{{ path('app_front') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_biblio_index_front_recru') }}">Libraries</a></li>
                <li class="breadcrumb-item active" aria-current="page">Resources</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Header End -->

<div class="container mt-4">
    <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Resources of {{ biblio.nomB }}</h1><br>
    
    {% if biblio.ressources|length > 0 %}
        {% for ressource in biblio.ressources %}
            <a href="{{ path('app_ressource_show_front_recru', {'id': ressource.id}) }}">
                <div class="slide-container">
                    <div class="wrapper">
                        <div class="clash-card barbarian"><br>
                            <img style="width:70%;height:70%;border-radius: 14px;" src="{{ asset(ressource.imageBRessource) }}"><br>
                            <div class="clash-card__level clash-card__level--barbarian">{{ ressource.titreB }}</div>
                            <div class="clash-card__unit-description">{{ ressource.typeB }}</div>
                            <div class="clash-card__unit-stats clash-card__unit-stats--barbarian clearfix">
                                <div class="">
                                    <div class="stat-value">Date Publication</div>
                                    <div class="stat">{{ ressource.datePublicaB ? ressource.datePublicaB|date('Y-m-d') : '' }}</div>
                                </div>
                            </div>
                        </div> <!-- end clash-card barbarian -->
                    </div> <!-- end wrapper -->
                </div>
            </a>
        {% endfor %}
    {% else %}
        <h3 class="text-center"style="color: #a90909;"><strong>No Resources Yet</strong></h3>
    {% endif %}
</div>

{% endblock %}
