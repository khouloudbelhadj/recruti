{% extends 'baseBack.html.twig' %}

{% block title %}<title>Liste des Condidatures</title>{% endblock %}

{% block body %}

   <div class="container mt-4">
        <h1 class="mb-4">Liste des Condidatures</h1>
        <a href="{{ path('app_condidature_new') }}" class="btn btn-success float-end" style="margin-block-end: 20px;">Create new</a>


        <table class="table table-borderless table-data3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom de condidat</th>
                    <th scope="col">Email de condidat</th>
                    <th scope="col">CV de condidat</th>
                    <th scope="col">Lettre de motivation</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                
                {% for condidature in condidatures %}
                    {% set img = condidature.cvC %}
                    <tr>
                        <td>{{ condidature.nomC }}</td>
                        <td>{{ condidature.emailC }}</td>
                        <td><img style="width:150px;height:150px;" src="{{asset(img) }}"></td>
                        <td>{{ condidature.lettreMo }}</td>
                        <td>
                        <a href="{{ path('app_condidature_show', {'id': condidature.id}) }}"class="btn btn-outline-secondary btn-sm">Show</a>
                        <a href="{{ path('app_condidature_edit', {'id': condidature.id}) }}"class="btn btn-outline-danger btn-sm">Edit</a>
                         </td>
                    </tr>
                {% else %}
                    <tr>
                         <td colspan="6">no records found</td>
                     </tr>
                 {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
