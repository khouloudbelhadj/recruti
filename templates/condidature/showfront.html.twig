{% extends 'baseFront.html.twig' %}

{% block title %}<title>Show postulas</title>{% endblock %}

{% block body %}
<div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown"> Show Postulas </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page"> Postulas</li>
                    </ol>
                </nav>
            </div>
        </div>

    <div class="container mt-4">
        <h1 class="mb-4"></h1>
        {% set img = condidature.cvC %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Nom de condidat </th>
                    <td>{{condidature.nomC }}</td>
                </tr>
                <tr>
                    <th>Email de condidat</th>
                    <td>{{ condidature.emailC }}</td>
                </tr>
                <tr>
                    <th>CV de condidat</th>
                    <td><img style="width:150px;height:150px;" src="{{ asset(img) }}"></td>
                </tr>
                <tr>
                    <th>La lettre de motivation</th>
                    <td>{{ condidature.lettreMo }}</td>
                </tr>
            </tbody>
        </table>
        <div align="center">
            <a href="{{ path('app_condidature_edit_front', {'id': condidature.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin:2px;">Edit</a>
            <div style="margin-right:150px;margin-top:5px;">
                {{ include('condidature/_delete_form_front.html.twig') }}
            </div>
              <button class="btn btn-sm" style="background-color: white; margin-right:1270px;"> 
                <a href="{{ path('app_condidature_index_front') }}"><img  src="{{ asset('FrontOffice/img/arriere.png') }}" style="width: 40px; height: 40px;"></a>
            </button>
        </div>
</div>
{% endblock %}

