{% extends 'baseFront.html.twig' %}

{% block title %}<title>Show Apply</title>{% endblock %}

{% block body %}
    <div class="container-xxl py-5 bg-dark page-header mb-5">
        <div class="container my-5 pt-5 pb-4">
            <h1 class="display-3 text-white mb-3 animated slideInDown"> Show apply </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page"> Apply</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="container mt-4">
        <h1 class="mb-4"></h1>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Name of candidate</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ condidature.nomC }}</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Email of candidate</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ condidature.emailC }}</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">CV of candidate</h5>
            </div>
            <div class="card-body">
                <img style="width: 150px; height: 150px;" src="{{ asset(condidature.cvC) }}" alt="CV">
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Cover letter</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ condidature.lettreMo }}</p>
            </div>
        </div>
                <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Corresponding offer </h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ condidature.offer }}</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_condidature_edit_front', {'id': condidature.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin: 2px;">Edit</a>
            <div style="margin-right: 150px; margin-top: 5px;">
                {{ include('condidature/_delete_form_front.html.twig') }}
            </div>
            <button class="btn btn-sm" style="background-color: white; margin-right:1270px;"> 
                <a href="{{ path('app_offer_show_front_condi') }}"><img  src="{{ asset('FrontOffice/img/arriere.png') }}" style="width: 40px; height: 40px;"></a>
            </button>
        </div>
    </div>
{% endblock %}
