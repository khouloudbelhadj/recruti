{% extends 'baseFront.html.twig' %}

{% block title %}<title>Show resource</title>{% endblock %}

{% block body %}
<div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown"> Show Resources </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="{{ path('app_front') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_biblio_index_front') }}">Libraries</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_ressource_index_front') }}">Resources</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page"> Show Resources </li>
                    </ol>
                </nav>
            </div>
        </div>

    <div class="container mt-4"> 
    <br><br>
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Show Resource</h1>
        <table class="table">
         <tbody>
           <tr>
                <th>Title</th>
                <td>{{ ressource.titreB }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ressource.typeB }}</td>
            </tr>
            <tr>
                <th>Date Publication</th>
                <td>{{ ressource.datePublicaB ? ressource.datePublicaB|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Field</th>
                <td>{{ ressource.categorieRessoB }}</td>
            </tr>
         </tbody>
        </table>
        <div align="center">
            <a href="{{ path('app_ressource_edit_front', {'id': ressource.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin:2px;">Edit</a>
            <div style="margin-right:150px;margin-top:5px;">
                {{ include('ressource/_delete_form_front.html.twig') }}
            </div>
              <button class="btn btn-sm" style="background-color: white; margin-right:1270px;"> 
                <a href="{{ path('app_ressource_index_front') }}"><img  src="{{ asset('FrontOffice/img/arriere.png') }}" style="width: 40px; height: 40px;"></a>
            </button>
        </div>
</div>
{% endblock %}

