{% extends 'baseFront.html.twig' %}

{% block title %}<title>List of Resources</title>{% endblock %}

{% block body %}
<div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown"> List of Resources</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="{{ path('app_front') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Resources</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page"> List Resources</li>
                    </ol>
                </nav>
            </div>
        </div>
 
   <div class="container mt-4">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Resources Listing</h1>
        <a href="{{ path('app_ressource_new_front') }}" class="btn btn-outline-danger float-end" style="margin-block-end: 20px; background-color:#a90909; color:white;;">Add New Resource</a>

        <table class="table table-borderless table-data3">
            <thead class="thead-dark">
                <tr>
                <th scope="col">Title</th>
                <th scope="col">Type</th>
                <th scope="col">Date Publication</th>
                <th scope="col">Field</th>
                </tr>
            </thead>
            <tbody>
                
                {% for ressource in ressources %}
                    <tr>
                <td>{{ ressource.titreB }}</td>
                <td>{{ ressource.typeB }}</td>
                <td>{{ ressource.datePublicaB ? ressource.datePublicaB|date('Y-m-d') : '' }}</td>
                <td>{{ ressource.categorieRessoB }}</td>

                        <td>
                        <a href="{{ path('app_ressource_show_front', {'id': ressource.id}) }}"class="btn btn-outline-secondary btn-sm">Show</a>
                        <a href="{{ path('app_ressource_edit_front', {'id': ressource.id}) }}"class="btn btn-outline-danger btn-sm">Edit</a>
                         </td>
                    </tr>
                {% else %}
                    <tr>
                         <td colspan="6">no records found</td>
                     </tr>
                 {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
