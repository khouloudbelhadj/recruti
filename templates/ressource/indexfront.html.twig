{% extends 'baseFront.html.twig' %}

{% block title %}<title>List of Resources</title>{% endblock %}

{% block body %}
<div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown"> List of Resources</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="{{ path('app_front') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_ressource_index_front_recru') }}">Resources</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page"> List Resources</li>
                    </ol>
                </nav>
            </div>
        </div>
 
   <div class="container mt-4">
      
      <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Resources Listing</h1>
     
     <form method="get" action="{{ path('app_ressource_index_front_recru') }}" class="mb-3">
        <div class="input-group">
            <input type="text" name="titreSearch" class="form-control" placeholder="Search by Title...">
            <input type="text" name="typeSearch" class="form-control" placeholder="Search by Type...">
            <input type="text" name="dateSearch" class="form-control" placeholder="Search by Date...">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>  
             <a href="{{ path('app_ressource_new') }}" class="btn btn-success float-end" style="margin-block-end: 20px;">Add new Resource</a>
                <br>
                {% for ressource in ressources %}
                {% set img = ressource.imageBRessource %}
               
    <a href="{{ path('app_ressource_show_front_recru', {'id': ressource.id}) }}">
        <div class="slide-container">
            <div class="wrapper">
                <div class="clash-card barbarian"><br>
                    <img style="width:70%;height:70%;border-radius: 14px ;" src="{{ asset(img)}}"><br>
                    <div class="clash-card__level clash-card__level--barbarian">{{ ressource.titreB }}</div>
                    <div class="clash-card__unit-description">{{ ressource.typeB }}</div>
                    <div class="clash-card__unit-stats clash-card__unit-stats--barbarian clearfix">
                        <div class="">
                            <div class="stat-value">Date Publication</div>
                            <div class="stat">{{ ressource.datePublicaB ? ressource.datePublicaB|date('Y-m-d') : '' }}</div>
                        </div>
                    </div>

                </div> <!-- end clash-card barbarian -->
            </div> <!-- end wrapper -->
</div> <!-- end container -->

                     {% else %}
                        <tr>
                            <td colspan="10">No records found</td>
                        </tr>
                    {% endfor %} <br><br>
{% endblock %}