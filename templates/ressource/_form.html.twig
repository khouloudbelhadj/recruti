<div class="card-body card-block">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.titre_b, "Title :") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.titre_b, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.titre_b) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.titre_b) }}</small>
            {% endif %}
        </div>
    </div>
    <br>

    <!-- Ajouter le champ Type -->
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.type_b, "Type :") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.type_b, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.type_b) is not empty %}
                <small class="form-text text-danger">{{ form_errors(form.type_b) }}</small>
            {% endif %}
        </div>
    </div>
    <br> 

    <!-- Ajouter le champ Date de publication -->
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.date_publica_b, "Creation Date :") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.date_publica_b,{'attr':{'class':'form-control'}})}}
            {% if form_errors(form.date_publica_b) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.date_publica_b) }}</small>
            {% endif %}
        </div>
    </div>
    <br>

    <!-- Ajouter le champ Field -->
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.categorie_resso_b, "Field :") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.categorie_resso_b, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.categorie_resso_b) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.categorie_resso_b) }}</small>
            {% endif %}
        </div>
    </div>
    <br>

    <!-- Ajouter le champ Description -->
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.description_b, "Description :") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.description_b, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.description_b) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.description_b) }}</small>
            {% endif %}
        </div>
    </div>
    <br>

    <!-- Ajouter le champ Image -->
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.image_b_ressource, "Resource Image :") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.image_b_ressource, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.image_b_ressource) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.image_b_ressource) }}</small>
            {% endif %}
        </div>
    </div>

    <br>

    <div class="row form-group">
        <div class="col col-md-3">
           {{ form_label(form.biblio, "Library:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.biblio, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.biblio) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.biblio) }}</small>
            {% endif %}
        </div>
    </div>
    <br><br><br><br>
    <div align="center" class="card-footer">
        <button class="btn btn-outline-secondary btn-sm" style="margin:2px;">{{ button_label|default('Add Resource') }}</button>
    </div>

    {{ form_end(form) }}
</div>
