<!DOCTYPE html>

<title>Media index</title>

{% block body %}
    <h1>Media index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Chemin</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for media in media %}
            <tr>
                <td>{{ media.id }}</td>
                <td>{{ media.chemin }}</td>
                <td>{{ media.type }}</td>
                <td>
                    <a href="{{ path('app_media_show', {'id': media.id}) }}">show</a>
                    <a href="{{ path('app_media_edit', {'id': media.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_media_new') }}">Create new</a>
{% endblock %}
