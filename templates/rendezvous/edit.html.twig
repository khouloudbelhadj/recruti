
{% extends 'baseBack.html.twig' %}
{% block body %}
<div class="container py-5">
    <h1 class="display-4 text-center mb-5">Edit appointment</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            
                {{ form_start(form) }}
                <div class="form-group">
                    <label class="form-label" for="dateRendez">Date</label>
                    {{ form_widget(form.dateRendez, {'attr': {'class': 'form-control form-control-dark'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label" for="heureRendez">Hour</label>
                    {{ form_widget(form.heureRendez, {'attr': {'class': 'form-control form-control-dark'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label" for="lieu">location</label>
                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control form-control-dark'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label" for="emailCondi">candidate email</label>
                    {{ form_widget(form.emailCondi, {'attr': {'class': 'form-control form-control-dark'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label" for="emailRepresen">Email Company Representative</label>
                    {{ form_widget(form.emailRepresen, {'attr': {'class': 'form-control form-control-dark'}}) }}
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-danger btn-block">Save Changes</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
