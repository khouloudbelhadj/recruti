{% extends 'baseBack.html.twig' %}

{% block title %}<title>Show Offer</title>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Offer</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ offer.titreO }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ offer.descriptionO }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ offer.typeO }}</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ offer.localisationO }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ offer.dateO ? offer.dateO|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ offer.dureO }}</td>
                </tr>
                <tr>
                    <th>Salary</th>
                    <td>{{ offer.salarieO }}</td>
                </tr>
            </tbody>
        </table>
        <div align="center">
            <a href="{{ path('app_offer_index') }}" class="btn btn-secondary btn-sm" style="margin:2px;">Back to List</a>
            <a href="{{ path('app_offer_edit', {'id': offer.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin:3px;">Edit</a>
            <div style="margin-right:47px;margin-top:3px;">
                {{ include('offer/_delete_form.html.twig') }}
            </div>
        </div>
</div>
{% endblock %}
