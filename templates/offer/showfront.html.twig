{% extends 'basefront.html.twig' %}

{% block title %}<title>Show Offer</title>{% endblock %}

{% block body %}
       <div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown"> Show Offer</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Show </li>
                    </ol>
                </nav>
            </div>
        </div>
    <div class="container mt-4">
        <h1 class="mb-4">Offer</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ offer.titreO }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ offer.descriptionO }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ offer.typeO }}</td>
                </tr>
                <tr>
                    <th>Localisation</th>
                    <td>{{ offer.localisationO }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ offer.dateO ? offer.dateO|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Duree</th>
                    <td>{{ offer.dureO }}</td>
                </tr>
                <tr>
                    <th>Salarie</th>
                    <td>{{ offer.salarieO }}</td>
                </tr>
            </tbody>
        </table>
        <div align="center">
            <a href="{{ path('app_offer_edit_front', {'id': offer.id}) }}" class="btn btn-outline-secondary btn-sm" style="margin:3px;"> Edit</a>
            <div style="margin-right:140px;margin-top:4.5px;">
                {{ include('offer/delete_formfront.html.twig') }}
            </div>
        </div>
         </div>
            <button class="btn btn-sm" style="background-color: white; margin-right:auto;"> 
                <a href="{{ path('app_offer_index_front') }}"><img  src="{{ asset('FrontOffice/img/arriere.png') }}" style="width: 40px; height: 40px;"></a>
            </button>
        </div>
</div>
{% endblock %}
