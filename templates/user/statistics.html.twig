{% extends 'baseBack.html.twig' %}

{% block title %}User Role Statistics{% endblock %}

{% block container %}
    <a href="{{ path('app_utilisateur_index') }}" class="btn btn-primary py-3 px-4 d-block d-xl-inline-block text-right align-top mb-3 mb-xl-0">
        Back to list
    </a>
    <div class="tab-content mt-6">
        <div class="tab-pane active" id="active-users" role="tabpanel" aria-labelledby="active-users-tab">
            <div class="text-base 2xl:text-lg justify-center sm:justify-start flex items-center text-slate-600 dark:text-slate-300 leading-3 mt-14 2xl:mt-24">
                User Role Statistics <i data-lucide="alert-circle" class="tooltip w-5 h-5 ml-1.5 mt-0.5" title="Stats Role"></i>
            </div>
            <div class="relative mt-8">
                <canvas id="role-chart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Use Chart.js to render a pie chart for user roles
    document.addEventListener('DOMContentLoaded', function () {
        var roleCtx = document.getElementById('role-chart').getContext('2d');
        var roleData = {{ roleData|raw }}; // Retrieve role data from PHP variable
        var roleChart = new Chart(roleCtx, {
            type: 'pie',
            data: {
                labels: Object.keys(roleData), // Extract labels from role data keys
                datasets: [{
                    data: Object.values(roleData), // Extract data values from role data
                    backgroundColor: ['#3498db', '#e74c3c', '#f39c12'], // You can add more colors if needed
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'bottom',
                },
            }
        });
    });
</script>

{% endblock %}
